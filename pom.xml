<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>net.ijupiter.trading</groupId>
    <artifactId>ijupiter-trading-system</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Financial Trading System</name>
    <description>基于事件引擎的通用金融交易系统（支持证券/基金/期货等品类）</description>

    <modules>
        <module>financial-trading-boms</module>
        <module>financial-trading-common</module>
        <module>financial-trading-api</module>
        <module>financial-trading-middleware</module>
        <module>financial-trading-core</module>
        <module>financial-trading-web</module>
        <module>financial-trading-boots</module>
    </modules>

    <properties>
        <java.version>17</java.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- 引入项目BOM -->
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>financial-trading-boms</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            
            <!-- 内部模块依赖 -->
            <!-- 公共模块 -->
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>financial-trading-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- 接口模块 -->
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>trading-engine-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>account-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>fund-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>product-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>settlement-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>query-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>message-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>cache-adapter-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <!-- 实现模块 -->
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>rabbitmq-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>redis-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>trading-engine-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>account-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>fund-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>product-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>settlement-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>query-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>investor-terminal</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>net.ijupiter.trading</groupId>
                <artifactId>admin-terminal</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>3.2.5</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.11.0</version>
                    <configuration>
                        <source>${java.version}</source>
                        <target>${java.version}</target>
                        <encoding>UTF-8</encoding>
                        <parameters>true</parameters>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>UTF-8</encoding>
                    <!-- 关键：启用Lombok注解处理器 -->
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>1.18.30</version> <!-- 与BOM中版本一致 -->
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
